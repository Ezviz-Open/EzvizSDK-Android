<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间号:"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人数"/>

                    <TextView
                        android:id="@+id/tv_net_quality"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网络状态"/>

                </LinearLayout>

            </LinearLayout>
            <CheckBox
                android:id="@+id/checkbox_bavlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:text="bav日志"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/vg_child_watch_video_talk_video_container"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextureView
                android:id="@+id/view_child_watch_video_talk_camera"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:keepScreenOn="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="音频"
                    android:checked="false"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="视频"
                        android:checked="false"/>

                    <CheckBox
                        android:id="@+id/cb_video_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:enabled="false"
                        android:text="子码流"
                        android:checked="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/switch_share_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:textSize="12sp"
                        android:text="共享屏幕"/>

                    <Switch
                        android:id="@+id/switch_look_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:text="观看共享"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ddd"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_share_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享屏幕:"/>

            <TextureView
                android:id="@+id/texture_share"
                android:layout_marginTop="3dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"
            android:background="#ddd"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/player_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"
            android:background="#ddd"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/client_list"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_invite_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="邀请设备"/>

            <Button
                android:id="@+id/btn_diss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:enabled="false"
                android:text="解散房间"/>

            <Button
                android:id="@+id/btn_exit"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="退出房间"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
