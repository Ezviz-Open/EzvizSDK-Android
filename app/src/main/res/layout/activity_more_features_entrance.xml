<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezviz.demo.common.MoreFeaturesEntranceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="此页用于展示demo额外功能入口"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:padding="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="临时开发测试"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickDebug"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取原始码流"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickGetOriginStream"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手表视频通话"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickWatchVideoTalk"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多方音视频通话"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickMultiVideoTalk"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUB设备取流"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickGetStreamFromHub"/>

    </LinearLayout>

</RelativeLayout>
